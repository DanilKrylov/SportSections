@model SportSections.Models.Coaching

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Coaching</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDetailsTr">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SportSectionId" />
            <div class="form-group">
                <label asp-for="TrainerId" class="control-label"></label>
                <select asp-for="TrainerId" class="form-control" asp-items="ViewBag.TrainerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FinishTime" class="control-label"></label>
                <input asp-for="FinishTime" class="form-control" />
                <span asp-validation-for="FinishTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if(ViewBag.BestTrainer is not null){
    var trainer = (Trainer)ViewBag.BestTrainer;
    <p>Рекомендований тренер</p>
    <p>Ім'я': @trainer.Name</p>
    <p>Прізвище: @trainer.Surname</p>
    <p>По батькові: @trainer.LastName</p>
}


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }