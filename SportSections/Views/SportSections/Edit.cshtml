@model SportSections.Models.SportSection

@{
    ViewData["Title"] = "Edit";
}

<link href="~/css/form.css" rel="stylesheet" />
<div class="form">
    <form asp-action="Edit" method="post">
        <div class="form__content">
            <div class="form__title">
                <span>Редагування спортивної секції</span>
            </div>
            <div class="form__items">
                <input type="hidden" asp-for="SportSectionId"/>
                <div class="form__items__item">
                    <span class="display">Назва</span>
                    <input type="text" asp-for="Name">
                    <span class="validation" asp-validation-for="Name"></span>
                </div>
                <div class="form__items__item">
                    <span class="display">Адреса</span>
                    <input type="text" asp-for="Address">
                    <span class="validation" asp-validation-for="Address"></span>
                </div>
                <div class="form__items__item">
                    <span class="display">Ціна</span>
                    <input type="text" asp-for="Cost">
                    <span class="validation" asp-validation-for="Cost"></span>
                </div>
                <div class="form__items__item">
                    <span class="display">Рекомендована підготовка</span>
                    <input type="text" asp-for="RecommendedTraining">
                    <span class="validation" asp-validation-for="RecommendedTraining"></span>
                </div>
                <div class="form__items__item">
                    <span class="display">Рекомендація лікаря</span>
                    <input type="text" asp-for="DoctorRecomended">
                    <span class="validation" asp-validation-for="DoctorRecomended"></span>
                </div>
                <div class="form__items__item">
                    <span class="display">Спорт</span>
                    <select asp-for="SportId" class="form-control" asp-items="ViewBag.SportId"></select>
                </div>
                <div class="form__items__item">
                    <input type="submit" value="Відредагувати">
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
