@model SportSections.Models.SectionRecord

@{
    ViewData["Title"] = "Edit";
}

<link href="~/css/form.css" rel="stylesheet" />
<div class="form">
    <form asp-action="EditDetailsSp">
        <div class="form__content">
            <div class="form__title">
                <span>Редагування спортсмена в секції</span>
            </div>
            <div class="form__items">
                <input type="hidden" asp-for="SectionRecordId" />
                <input type="hidden" asp-for="SportSectionId" />
                <div class="form__items__item">
                    <span class="display">Спортсмен</span>
                    <select asp-for="SportsmanId" class="form-control" asp-items="ViewBag.SportsmanId"></select>
                </div>
                <div class="form__items__item">
                    <span class="display">Дата запису</span>
                    <input type="datetime-local" asp-for="RecordDate">
                    <span class="validation" asp-validation-for="RecordDate"></span>
                </div>
                <div class="form__items__item">
                    <input type="submit" value="Редагувати">
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}