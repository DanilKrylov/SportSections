@model IEnumerable<SportSections.Models.Sport>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}


<div>
    <a asp-action="DoRequest" asp-controller="Request" asp-route-sqlString="select sports.sportId, sports.name, count(*) count from sports
join sportSections on sportSections.sportId = sports.sportId
group by sports.sportId, sports.name">Отримати кількість секцій для кодного спорту</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SportType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChanceOfInjury)
            </th>
            @if (User.Identity.IsAuthenticated)
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SportType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChanceOfInjury)
                </td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.SportId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.SportId">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
