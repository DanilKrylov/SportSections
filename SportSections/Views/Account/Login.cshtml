@model LoginViewModel

    <link rel="stylesheet" href="~/css/form.css">
    <div class="form">
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="form__content">
                <div class="form__title">
                    <span>Вхід в акаунт</span>
                </div>
                <div class="form__items">
                    <div class="form__items__item">
                        <span class="display">Логін</span>
                        <input type="text">
                        <span class="validation" asp-validation-for="Login"></span>
                    </div>
                    <div class="form__items__item">
                        <span class="display">Пароль</span>
                        <input type="password">
                        <span class="validation" asp-validation-for="Password"></span>
                    </div>
                    <div class="form__items__item">
                        <input type="submit" value="Увійти">
                    </div>
                </div>
            </div>
        </form>
    </div>